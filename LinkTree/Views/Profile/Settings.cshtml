@model UserEditViewModel
@{
    ViewData["Title"] = "Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="text-light">Profili Düzenle</h1>
</div>
<a id="profilePicture" href="#popup">
    <img src="https://link-tree-bucket.s3.us-west-2.amazonaws.com/@ViewBag.avatar" alt="Profile Picture">
</a>


<div id="userName">
    @@@Html.DisplayTextFor(x=>x.Username)
</div>



<div class="container">
    <div class="row justify-content-md-center">
        <div class="col col-lg-1">
        </div>
        <div class="col-md-auto">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label class="text-light" for="exampleInputEmail1">Kullanıcı Adı</label>
                    <input type="text" asp-for="Username" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" readonly>
                </div>
                <div class="form-group">
                    <label class="text-light" for="exampleInputEmail1">Mail</label>
                    <input type="email" asp-for="Mail" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Mail">
                </div>
                <div class="custom-file mb-4">
                    <label class="text-light" for="exampleInputEmail1">Resim</label>
                    <input asp-for="UserAvatar" type="file" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Resim Seç</label>
                </div>
                <div>
                <button type="submit" class="btn btn-primary">Güncelle</button>
                <a href="/Profile/Index/" class="btn btn-light ml-">Vazgeç</a>
                </div>
            </form>
        </div>
        <div class="col col-lg-1">
        </div>
    </div>
</div>




